<section class="deals">
<form method="post" action="/deals">
  <label for="name-field">Name:</label>
  <input type="text" required name="name" id="name-field"/><br></br>

  <label for="day-field">Day:</label>
  <input type="text" required name="day" id="day-field"/><br></br>

  <label for="discount-field">Discount (%):</label>
  <input type="number" required name="discount" id="discount-field"/><br></br>

  <label for="eatery-selection">Select Eatery:</label>
  <select name="eatery_id" id="eatery-selection"><br></br>

    <% @eateries.each do |eatery| %>
     <option value=<%=eatery.id%>><%=eatery.name%></option>
     <%end%><br></br>
  </select><br></br>


  <input type="submit" value="Add Deal"/>

</form>
</section>
